    <script>
        // Navigation functionality
        const mobileMenuBtn = document.getElementById('mobileMenuBtn');
        const navLinks = document.getElementById('navLinks');
        
        mobileMenuBtn.addEventListener('click', () => {
            navLinks.classList.toggle('active');
        });
        
        // Page navigation
        function showPage(pageId) {
            // Hide all pages
            const pages = document.querySelectorAll('.page-content, .hero, .test-server');
            pages.forEach(page => {
                page.classList.remove('active-page');
            });
            
            // Hide sections that aren't page-content
            const sections = document.querySelectorAll('section');
            sections.forEach(section => {
                if (!section.classList.contains('page-content') && 
                    !section.classList.contains('hero') && 
                    !section.classList.contains('test-server') &&
                    section.id !== 'plans-section') {
                    section.style.display = 'none';
                }
            });
            
            // Show the selected page
            const page = document.getElementById(pageId);
            if (page) {
                page.classList.add('active-page');
                
                // If home page, show all sections
                if (pageId === 'home') {
                    sections.forEach(section => {
                        if (!section.classList.contains('page-content')) {
                            section.style.display = 'block';
                        }
                    });
                }
            }
            
            // Close mobile menu if open
            navLinks.classList.remove('active');
            
            // Scroll to top
            window.scrollTo(0, 0);
        }
        
        // Order plan function
        function orderPlan(planName) {
            showPage('contact');
            alert(`شكراً لاختيارك باقة ${planName}. يرجى ملء النموذج وسنتواصل معك قريباً لإتمام عملية الشراء.`);
        }
        
        // Trial form submission
        const trialForm = document.getElementById('trialForm');
        if (trialForm) {
            trialForm.addEventListener('submit', function(e) {
                e.preventDefault();
                alert('شكراً لطلبك! سنتصل بك في أقرب وقت لإرسال بيانات تجربة السيرفر المجانية.');
                trialForm.reset();
            });
        }
        
        // Sitemap page
        const sitemapPage = document.createElement('section');
        sitemapPage.id = 'sitemap';
        sitemapPage.className = 'container page-content';
        sitemapPage.innerHTML = `
            <h2 class="section-title">خريطة الموقع</h2>
            <div style="margin-top: 40px;">
                <h3 style="margin-bottom: 20px; color: var(--primary);">صفحات الموقع</h3>
                <ul style="list-style-position: inside; margin-right: 20px; font-size: 1.1rem;">
                    <li style="margin-bottom: 15px;"><a href="#" onclick="showPage('home')" style="color: var(--primary); text-decoration: none;">الرئيسية</a> - الصفحة الرئيسية للموقع وعرض الباقات</li>
                    <li style="margin-bottom: 15px;"><a href="#" onclick="showPage('about')" style="color: var(--primary); text-decoration: none;">من نحن</a> - معلومات عن الشركة ورؤيتها ورسالتها</li>
                    <li style="margin-bottom: 15px;"><a href="#" onclick="showPage('contact')" style="color: var(--primary); text-decoration: none;">اتصل بنا</a> - طرق التواصل وطلب التجربة المجانية</li>
                    <li style="margin-bottom: 15px;"><a href="#" onclick="showPage('privacy')" style="color: var(--primary); text-decoration: none;">سياسة الخصوصية</a> - كيفية جمع واستخدام البيانات</li>
                    <li style="margin-bottom: 15px;"><a href="#" onclick="showPage('dmca')" style="color: var(--primary); text-decoration: none;">سياسة DMCA</a> - سياسة حقوق الطبع والنشر</li>
                </ul>
                
                <h3 style="margin: 40px 0 20px; color: var(--primary);">باقات الاشتراك</h3>
                <ul style="list-style-position: inside; margin-right: 20px; font-size: 1.1rem;">
                    <li style="margin-bottom: 10px;">باقة 3 أشهر - 150 درهم شهرياً</li>
                    <li style="margin-bottom: 10px;">باقة 6 أشهر - 130 درهم شهرياً (الأكثر مبيعاً)</li>
                    <li style="margin-bottom: 10px;">باقة 12 شهر - 100 درهم شهرياً</li>
                </ul>
            </div>
        `;
        document.body.insertBefore(sitemapPage, document.querySelector('footer'));
        
        // Initialize the page
        document.addEventListener('DOMContentLoaded', function() {
            // Show home page by default
            showPage('home');
        });
    </script>
